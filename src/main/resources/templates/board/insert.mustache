{{>layout/header}}
<script>
    function checkForm(form) {
        let title = form.title.value.trim();
        let content = form.content.value.trim();
        let isValid = true;
        let errorMessage = "";

        // 제목 검증
        if (title === "") {
            errorMessage += "제목을 입력해주세요.\n";
            isValid = false;
        }

        // 내용 검증
        if (content === "") {
            errorMessage += "내용을 입력해주세요.\n";
            isValid = false;
        }

        // 에러 메시지 표시 (필요한 경우)
        if (!isValid) {
            alert(errorMessage);
        }

        return isValid;
    }
</script>
<div class="main-container">
    <div class="content-wrapper">
        <form class="make-board-item" action="/reservation/board/write" method="post" onsubmit="return checkForm(this);">
            <div class="mb-3">
                <table class="table">
                    <tr>
                        <th>번호</th>
                        <td>신규(insert)</td>
                    </tr>
                    <tr>
                        <th>제목</th>
                        <td>
                            <input type="text" class="form-control" name="title" placeholder="제목 입력">
                        </td>
                    </tr>
                    <tr>
                        <th>내용</th>
                        <td>
                            <textarea class="form-control" rows="5" name="content" placeholder="내용 입력"></textarea>
                        </td>
                    </tr>
                </table>
            </div>
            <input type="hidden" name="category" value="{{insertForm.category}}">
            <input type="hidden" name="memberId" value="{{insertForm.memberId}}">
            {{#insertForm.rootId}}
                <input type="hidden" name="rootId" value="{{insertForm.rootId}}">
            {{/insertForm.rootId}}
            <div class="text-end">
                <button type="submit" class="btn btn-primary">추가</button>
            </div>
        </form>
    </div>
</div>
{{>layout/footer}}